    add_default($nl, 'grazing(2,1)%sname');
    add_default($nl,'grazing(2,1)%auto_ind');
    add_default($nl,'grazing(2,1)%auto_ind_cnt');
    add_default($nl,'grazing(2,1)%zoo_ind');
    add_default($nl,'grazing(2,1)%zoo_ind_cnt');
    add_default($nl,'grazing(2,1)%z_umax_0');
    add_default($nl,'grazing(2,1)%z_grz');
    add_default($nl,'grazing(2,1)%graze_zoo');
    add_default($nl,'grazing(2,1)%graze_poc');
    add_default($nl,'grazing(2,1)%graze_doc');
    add_default($nl,'grazing(2,1)%f_zoo_detr');
    add_default($nl, 'grazing(2,1)%grazing_function');

    add_default($nl, 'grazing(3,1)%sname');
    add_default($nl,'grazing(3,1)%auto_ind');
    add_default($nl,'grazing(3,1)%auto_ind_cnt');
    add_default($nl,'grazing(3,1)%zoo_ind');
    add_default($nl,'grazing(3,1)%zoo_ind_cnt');
    add_default($nl,'grazing(3,1)%z_umax_0');
    add_default($nl,'grazing(3,1)%z_grz');
    add_default($nl,'grazing(3,1)%graze_zoo');
    add_default($nl,'grazing(3,1)%graze_poc');
    add_default($nl,'grazing(3,1)%graze_doc');
    add_default($nl,'grazing(3,1)%f_zoo_detr');
    add_default($nl, 'grazing(3,1)%grazing_function');
}


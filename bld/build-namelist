if ($ciso_on eq "TRUE") {

	my $temp;

    if (($OCN_TRANSIENT ne "unset") &&  ($OCN_TRANSIENT ne "1850-2000") &&
        ($OCN_TRANSIENT ne "rcp4.5") && ($OCN_TRANSIENT ne "rcp8.5")) {
      print " OCN_TRANSIENT=$OCN_TRANSIENT not supported by ciso module \n";
      die;

    add_default($nl, 'ciso_tracer_init_ext(1)%mod_varname');
    add_default($nl, 'ciso_tracer_init_ext(1)%file_varname');
    add_default($nl, 'ciso_tracer_init_ext(1)%scale_factor');
    add_default($nl, 'ciso_tracer_init_ext(2)%mod_varname');
